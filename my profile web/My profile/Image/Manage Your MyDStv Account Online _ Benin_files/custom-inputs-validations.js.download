$(document).ready(function(){function setInputFilter(textbox,inputFilter){["input","keydown","keyup","mousedown","mouseup","select","contextmenu","drop"].forEach(function(event){textbox.addEventListener(event,function(){if(inputFilter(this.value)){this.oldValue=this.value;this.oldSelectionStart=this.selectionStart;this.oldSelectionEnd=this.selectionEnd;}else if(this.hasOwnProperty("oldValue")){this.value=this.oldValue;this.setSelectionRange(this.oldSelectionStart,this.oldSelectionEnd);}});});}
var smartCardNumber=document.getElementById("SmartcardNumber");var contactNumber=document.getElementById("ContactNumber");if(smartCardNumber){setInputFilter(smartCardNumber,function(value){return /^\d*$/.test(value);});}
if(contactNumber){setInputFilter(contactNumber,function(value){return /^\d*$/.test(value);});}
var changeTooltipPosition=function(event){var tooltipX=event.pageX-8;var tooltipY=event.pageY+8;$('div.tooltip').css({top:tooltipY,left:tooltipX});};var showTooltip=function(event){$('div.tooltip').remove();$('<div class="tooltip">Enter a valid contact number (Digits only) </div>').appendTo('body');changeTooltipPosition(event);};var showTooltipCard=function(event){$('div.tooltip').remove();$('<div class="tooltip"> Enter smart card number of 10 to 11 digits</div>').appendTo('body');changeTooltipPosition(event);};var hideTooltip=function(){$('div.tooltip').remove();};$("#SmartcardNumber").bind({mousemove:changeTooltipPosition,mouseenter:showTooltipCard,mouseleave:hideTooltip});$("#ContactNumber").bind({mousemove:changeTooltipPosition,mouseenter:showTooltip,mouseleave:hideTooltip});});